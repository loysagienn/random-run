.root
  display: block
  width: fit-content
  height: fit-content
  text-decoration: none

.content
  box-sizing: border-box
  width: 100%
  cursor: pointer
  user-select: none



  &.size_m
    padding: 10px 20px
    font-size: 16px
    line-height: 20px

    &.style_white
      padding: 9px 19px

  &.size_s
    padding: 8px 16px
    font-size: 15px
    line-height: 18px

    &.style_white
      padding: 7px 15px

  &.size_xs
    padding: 6px 14px
    font-size: 14px
    line-height: 16px

    &.style_white
      padding: 5px 13px



  &.style_default
    background-color: #f0f0f0
    border-radius: 4px
    color: #404040
    &:hover
      background-color: #e8e8e8
      color: #202020
    &:active
      box-shadow: inset 0 0 3px 0 rgba(0, 0, 0, 0.05);
      background-color: #e4e4e4

  &.style_strava
    background-color: #fc5200
    border-radius: 4px
    color: #ffffff
    &:hover
      background-color: #f44a00
    &:active
      box-shadow: inset 0 0 3px 0 rgba(0, 0, 0, 0.1);
      background-color: #ec4200

  &.style_white
    background-color: #ffffff
    border-radius: 4px
    border: 1px solid #f4f4f4
    &:hover
      background-color: #ffffff
      color: #202020
      border: 1px solid #e8e8e8
    &:active
      background-color: #ffffff
      border: 1px solid #e0e0e0

  &.style_light
    background-color: #E3F2FD
    border-radius: 4px
    color: #404040
    &:hover
      background-color: #dbf0ff
      color: #202020
    &:active
      box-shadow: inset 0 0 3px 0 rgba(0, 0, 0, 0.05);
      background-color: #d4edff


