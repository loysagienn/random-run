@import '../common.styl'

.container
  position: fixed
  width: 0
  height: 0

.wrapper
  position: fixed
  left: 0
  right: 0
  top: 0
  bottom: 0
  overflow: auto
  z-index: 10000
  opacity: 0
  transition: opacity 0.2s ease-in-out
  background-color: rgba(0,0,0,0.3)

  &.visible
    opacity: 1

    .popup
      transform: translate(0, 0) scale(1, 1)

.content
  box-sizing: border-box
  min-height: 100vh
  min-width: 100vw
  width: fit-content
  height: fit-content
  padding: 16px
  display: flex
  justify-content: center
  align-items: center
  pointer-events: none

  +maxWidth(400px)
    padding: 0

.popup
  background-color: #ffffff
  flex-shrink: 0
  pointer-events: auto
  border-radius: 6px
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2)
  transition: transform 0.2s ease-in-out
  transform: translate(0, 8px) scale(0.97, 0.97)

  +maxWidth(400px)
    min-height: 100vh
    min-width: 100vw
    border-radius: 0

.header
  padding: 16px
  display: flex
  justify-content: space-between
  align-items: center

.title
  font-size: 20px
  line-height: 24px

.closeBtn
  margin-left: 20px
  cursor: pointer

  path
    fill: #808080

  &:hover
    path
      fill: #404040

  &:active
    path
      fill: #000000